<% layout('layouts/boilerplate') %>

    <h1 class="pt-4">All Books </h1>
    <a href="/books/new">Create New Book</a>

    <% for(let book of books){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= book.image%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= book.title %>
                        </h5>
                        <h6 class="card-text">
                            <small class="text-muted">
                                <%= book.author %>
                            </small>

                        </h6>
                        <p class="card-text">
                            <%= book.summary %>
                        </p>
                        <a class="btn btn-primary" href="/books/<%= book._id %>">
                            <%= book.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>